{
    "manifest_version": 2,
    "name": "lingorino",
    "version": "0.1.0",

    "description": "Web-extension for language learners. Includes popup dictionary and Anki card creation.",
    
    "applications": {
        "gecko": {
            "id": "lingorino@janoande.github.io"
        }
    },

    "permissions": [
	"activeTab",
	"contextMenus",
        "notifications",
        "https://en.wiktionary.org/api/rest_v1/page/definition/*"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at" : "document_end"
        }
    ],
    "background": {
	"scripts": ["background.js"]
    }
}
